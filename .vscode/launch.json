{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/src/bin/train.runfiles/_main/src/bin/train",
            "args": [
                "${workspaceFolder}/roms/breakout.bin",
                "${workspaceFolder}/logs/debug/tfevents.out.tfevents",
                "${workspaceFolder}/videos/debug",
                "debug_group",
                "${workspaceFolder}/configs/debug.yaml",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ],
            "preLaunchTask": "build",
        },
        {
            "name": "(lldb) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/src/bin/train.runfiles/_main/src/bin/train",
            "cwd": "${workspaceFolder}",
            "args": [
                "${workspaceFolder}/roms/breakout.bin",
                "${workspaceFolder}/logs/debug/tfevents.out.tfevents",
                "${workspaceFolder}/videos/debug",
                "debug_group",
                "${workspaceFolder}/configs/debug.yaml",
            ],
            "sourceMap": {
                "/proc/self/cwd": "${workspaceFolder}",
                ".": "${workspaceFolder}"
            },
            "preLaunchTask": "build",
        }
    ]
}